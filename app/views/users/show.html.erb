<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.properties.any? %>
      <h3>Properties (<%= @user.properties.count %>)</h3>
      <ol class="properties">
        <%= render @properties %>
      </ol>
      <%= will_paginate @properties %>
    <% end %>
  </div>
</div>
